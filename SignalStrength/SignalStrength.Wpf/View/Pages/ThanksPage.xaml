<UserControl x:Class="SignalStrength.Wpf.View.Pages.ThanksPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SignalStrength.Wpf.View.Pages"
             xmlns:res="clr-namespace:SignalStrength.Wpf.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600">
    <Grid>
        <TextBlock Style="{DynamicResource ContentRoot}">
            <Run Text="{x:Static res:Resources.ThanksContent}"/><LineBreak></LineBreak>
            <!--<Run Text="Thanks my wife,my parents(especially my mother)!"/>-->
        </TextBlock>
    </Grid>
</UserControl>
