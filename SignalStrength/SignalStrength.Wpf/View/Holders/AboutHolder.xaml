<UserControl x:Class="SignalStrength.Wpf.View.Holders.AboutHolder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SignalStrength.Wpf.View.Holders"
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             xmlns:res="clr-namespace:SignalStrength.Wpf.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Style="{StaticResource ContentRoot}">
        <mui:ModernTab SelectedSource="/View/Pages/AboutPage.xaml" Layout="List" ListWidth="Auto" Margin="10,10">
            <mui:ModernTab.Links>
                <mui:Link DisplayName="{x:Static res:Resources.About}" Source="/View/Pages/AboutPage.xaml" />
                <mui:Link DisplayName="{x:Static res:Resources.Thanks}" Source="/View/Pages/ThanksPage.xaml"/>
            </mui:ModernTab.Links>
        </mui:ModernTab>
    </Grid>
</UserControl>
